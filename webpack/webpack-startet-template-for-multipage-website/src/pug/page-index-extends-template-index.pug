extends template-index.pug

block header
  header(class='header') 
    //- Slideshow container 
    div(class="slideshow-container")

      //- Full-width images with number and caption text 
      div(class="mySlides fade")
        div(class="numbertext") 1 / 3
        img(src="https://www.w3schools.com/howto/img_nature_wide.jpg" style="width:100%")
        div(class="text") Caption Text

      div(class="mySlides fade")
        div(class="numbertext") 2 / 3
        img(src="https://www.w3schools.com/howto/img_snow_wide.jpg" style="width:100%")
        div(class="text") Caption Two

      div(class="mySlides fade")
        div(class="numbertext") 3 / 3
        img(src="https://www.w3schools.com/howto/img_mountains_wide.jpg" style="width:100%")
        div(class="text") Caption Three

      //- Next and previous buttons
      a(class="prev") &#10094;
      a(class="next") &#10095;

    br

    //- The dots/circles 
    div(style="text-align:center")
      span(class="dot")
      span(class="dot")
      span(class="dot")
  

block main 
  main(class='main') Main content stuff
    div(id="carousel")
      div(class="carousel__buttons")
        button(class="carousel__prev") ◀  
          span(class="carousel__offscreen") Previous
        button(class="carousel__next") ▶ 
          span(class="carousel__offscreen") Next 
      ol(class="carousel__content")
        li(class='carousel__item')
          a(href='###') 1
        li(class='carousel__item')
          a(href='###') 2
        li(class='carousel__item')
          a(href='###') 3
        li(class='carousel__item')
          a(href='###') 4

  
  


block footer
  footer(class='footer') &copy; 2019